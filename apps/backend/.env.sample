TASKLY_PRIMARY.ENV="local"

TASKLY_SERVER.PORT="8080"
TASKLY_SERVER.READ_TIMEOUT="30"
TASKLY_SERVER.WRITE_TIMEOUT="30"
TASKLY_SERVER.IDLE_TIMEOUT="60"
TASKLY_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

TASKLY_DATABASE.HOST="localhost"
TASKLY_DATABASE.PORT="5432"
TASKLY_DATABASE.USER="postgres"
TASKLY_DATABASE.PASSWORD=""
TASKLY_DATABASE.NAME="taskly"
TASKLY_DATABASE.SSL_MODE="disable"
TASKLY_DATABASE.MAX_OPEN_CONNS="25"
TASKLY_DATABASE.MAX_IDLE_CONNS="25"
TASKLY_DATABASE.CONN_MAX_LIFETIME="300"
TASKLY_DATABASE.CONN_MAX_IDLE_TIME="300"

TASKLY_AUTH.SECRET_KEY="secret"

TASKLY_INTEGRATION.RESEND_API_KEY="resend_key"

TASKLY_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
TASKLY_OBSERVABILITY.SERVICE_NAME="taskly"
TASKLY_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
TASKLY_OBSERVABILITY.LOGGING.LEVEL="debug"
TASKLY_OBSERVABILITY.LOGGING.FORMAT="console"
TASKLY_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
TASKLY_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TASKLY_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
TASKLY_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
TASKLY_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
TASKLY_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
TASKLY_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
TASKLY_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
TASKLY_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"